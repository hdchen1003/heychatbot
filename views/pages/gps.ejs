<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>gps</title>
</head>

<body>
    <p id="startGPS"><button onclick="geoFindMe()">Show my location</button></p>
    <div id="out"></div>
    <script>

        function geoFindMe() {
            var output = document.getElementById("out");
            var startGPS = document.getElementById("startGPS");
            startGPS.innerHTML = ''
            if (!navigator.geolocation) {
                output.innerHTML = "<p>Geolocation is not supported by your browser</p>";
                return;
            }

            function success(position) {
                var latitude = position.coords.latitude;
                var longitude = position.coords.longitude;

                //  output.innerHTML = '<p>Latitude is ' + latitude + '° <br>Longitude is ' + longitude + '°</p>';
                output.innerHTML = '<form action="http://<%=ip %>" name="form1" method="post"> <input type="hidden" name="latitude" value=' + latitude + '><input type="hidden" name="longitude" value=' + longitude + '> <input type="submit" name="name" value="定位完成"  ></form>'




                // var img = new Image();
                // img.src = "http://maps.googleapis.com/maps/api/staticmap?center=" + latitude + "," + longitude + "&zoom=13&size=300x300&sensor=false";

                // output.appendChild(img);
            };

            function error() {
                output.innerHTML = "Unable to retrieve your location";
            };

            output.innerHTML = "<p>定位中…</p>";

            navigator.geolocation.getCurrentPosition(success, error);
            function autoSubmit() {
                if (true) {
                    return true;
                }
                return false;
            }
        }
    </script>
</body>

</html>